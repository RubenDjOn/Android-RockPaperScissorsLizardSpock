<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:id="@+id/button_rock"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="selectMovement"
        android:tag="Rock" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paper"
        android:id="@+id/button_paper"
        android:layout_alignTop="@+id/button_rock"
        android:layout_toRightOf="@+id/button_rock"
        android:layout_toEndOf="@+id/button_rock"
        android:onClick="selectMovement"
        android:tag="Paper" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scissors"
        android:id="@+id/button_scissors"
        android:layout_alignTop="@+id/button_paper"
        android:layout_toRightOf="@+id/button_paper"
        android:layout_toEndOf="@+id/button_paper"
        android:onClick="selectMovement"
        android:tag="Scissors"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lizard"
        android:id="@+id/button_lizard"
        android:layout_below="@+id/button_rock"
        android:onClick="selectMovement"
        android:tag="Lizard"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spock"
        android:id="@+id/button_spock"
        android:layout_alignTop="@+id/button_lizard"
        android:layout_toRightOf="@+id/button_lizard"
        android:layout_toEndOf="@+id/button_lizard"
        android:onClick="selectMovement"
        android:tag="Spock" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_lizard" />
</RelativeLayout>
