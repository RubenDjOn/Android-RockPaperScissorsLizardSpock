    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_rock"
        android:src="@drawable/rock"
        android:onClick="selectMovement"
        android:tag="Rock"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_paper"
        android:src="@drawable/paper"
        android:onClick="selectMovement"
        android:tag="Paper"
        android:layout_alignTop="@+id/button_rock"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_scissors"
        android:src="@drawable/scissors"
        android:onClick="selectMovement"
        android:tag="Scissors"
        android:layout_above="@+id/button_lizard"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_lizard"
        android:src="@drawable/lizard"
        android:onClick="selectMovement"
        android:tag="Lizard"
        android:layout_alignTop="@+id/button_spock"
        android:layout_alignLeft="@+id/button_rock"
        android:layout_alignStart="@+id/button_rock" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_spock"
        android:src="@drawable/spock"
        android:onClick="selectMovement"
        android:tag="Spock"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button_paper"
        android:layout_alignStart="@+id/button_paper" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/button_scissors"
        android:layout_above="@+id/button_lizard"
        android:layout_toLeftOf="@+id/button_scissors"
        android:layout_toStartOf="@+id/button_scissors" />

